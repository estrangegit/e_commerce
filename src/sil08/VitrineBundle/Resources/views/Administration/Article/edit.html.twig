{%  extends 'sil08VitrineBundle:Administration:layoutAdministration.html.twig' %}

{% block title %}
    Article
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-offset-1 col-lg-10">
            <div class="jumbotron">
                <h2>Formulaire permettant de modifier un article</h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-3 col-lg-6">
            {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(edit_form) }}
            <div class="row">
                <div class="col-lg-3">
                    <input class="btn btn-info" type="submit" value="Enregistrer" />
                </div>
                <div class="col-lg-3">
                    <a class="btn btn-info" href="{{ path('administration_articles_par_categorie', {'id': categorie.id}) }}">Annuler</a>
                </div>
            </div>
            {{ form_end(edit_form) }}

        </div>
    </div>

{% endblock %}