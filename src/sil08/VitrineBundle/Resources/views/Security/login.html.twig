{%  extends 'sil08VitrineBundle:Default:layout.html.twig' %}


{% block title %}
    compte
{% endblock %}

{% block identite %}
{% endblock %}

{% block panier %}
{% endblock %}

{% block meilleuresVentes %}
{% endblock %}


{% block content %}
    {% if error %}
        <div class="row">
            <div class="col-lg-offset-3 col-lg-6 alert alert-block alert-danger">
                <span>{{ error.message }}</span>
            </div>
        </div>
    {% endif %}

    <div class="row">

        <div class="col-lg-offset-3 col-lg-6">

            <div class="jumbotron">
                <h3>Formulaire de connexion</h3>
            </div>

            <form action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <label for="username">Pseudo :</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input class="form-control" type="password" id="password" name="_password" />
                </div>
                <input type="hidden" name="_target_path" value="{{ lastPath }}" />
                <input class="btn btn-info" type="submit" value="Connexion" />
            </form>

        </div>

    </div>
{% endblock %}