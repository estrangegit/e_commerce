{%  extends 'sil08VitrineBundle:Default:layout.html.twig' %}

{% block title %}
    Catalogue
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-offset-2 col-lg-8">
            <div class="panel panel-info">
                <table class="table table-striped">
                    <div class="panel-heading">
                        <h3 class="panel-title">Liste des catégories</h3>
                    </div>
                    <thead>
                    <tr>
                        <th>Intitule</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td>{{ categorie.intitule }}</td>
                                <td>
                                    <a class="btn btn-info" href="{{ path('sil08_vitrine_articles_par_categorie', {'id': categorie.id}) }}">
                                        <span class="glyphicon glyphicon-list"></span>
                                        <br>
                                        Détails
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}